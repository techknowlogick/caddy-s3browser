:80

s3browser {
	site_name "${S3_SITENAME}" # S3 Browser
	endpoint ${S3_ENDPOINT}
	region ${S3_REGION}
	key ${S3_KEY}
	secret ${S3_SECRET}
	secure ${S3_SECURE} # true
	bucket ${S3_BUCKET}
	refresh ${S3_REFRESH} # 5m
	refresh_api_secret ${S3_REFRESH_SECRET}
	debug ${S3_DEBUG} # false
	signed_url_redirect ${S3_SIGNED_URL_REDIRECT} # false
	skip_serving ${S3_SKIP_SERVING} # false
	semantic_sort ${S3_SEMANTIC_SORT} # false
	allow_customization ${S3_ALLOW_CUSTOMIZATION} # false
}

proxy / ${S3_PROTO}://${S3_HOST}${S3_EXTRA} {
	header_upstream Host ${S3_HOST}
}
